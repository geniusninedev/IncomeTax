<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


   <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       android:background="@color/colorPrimary"
        app:title="@string/app_name" />




    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <FrameLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">

        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Income Tax Year "
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/incometaxTextviewid"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:text="2017-2018"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/incometaxTextviewid"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="25dp"
                        android:text="Gender"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:id="@+id/gendertextviewid"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <Spinner
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderspinnerid"
                        android:layout_weight="2" />
                </LinearLayout>



            <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/incometaxsalaryid"
            android:layout_gravity="center"
            android:typeface="serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Income Tax from Salary:"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:maxLength="12"
                    android:id="@+id/incometaxedittextid"
                    android:layout_gravity="right"
                    android:background="@android:drawable/editbox_background"
                    android:filterTouchesWhenObscured="true"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:fadingEdgeLength="20dp"
                    android:hint="Enter  Amount.."
                    android:ems="10"> </EditText>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:id="@+id/incometaxrelieftextviewid"
                    android:layout_gravity="center"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Income Tax After Relief:"/>

                <EditText
                    android:layout_height="35dp"
                    android:maxLength="12"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/incometaxreliefedittextid"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:background="@android:drawable/editbox_background"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:fadingEdgeLength="10dp"
                    android:hint="tax.."
                    android:ems="10"> </EditText>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:id="@+id/surchargetextviewid"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Surcharge:"/>

                <EditText
                    android:layout_height="35dp"
                    android:maxLength="12"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/surchargeedittextid123"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:fadingEdgeLength="10dp"
                    android:hint="tax.."
                    android:ems="10"> </EditText>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:id="@+id/surchargetextviewid"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Education Cess:"/>
                <EditText
                    android:layout_height="35dp"
                    android:maxLength="12"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="5dp"
                    android:hint="educationcess.."
                    android:id="@+id/educationcessedittextid"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:fadingEdgeLength="10dp"
                    android:ems="10"> </EditText>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/higherandseceducesstextviewid"
                    android:layout_gravity="center"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Higher And Secondary Education Cess:"
                    android:layout_weight="0.25" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:maxLength="12"
                    android:hint="Higher EducationCess.."
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/higherandseceducessedittextid"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:fadingEdgeLength="10dp"
                    android:ems="10"> </EditText>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/totalrelieftextviewid"
                    android:layout_gravity="center"
                    android:layout_weight="2.97"
                    android:layout_marginRight="7dp"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" Total Relief:"/>

                <EditText
                    android:layout_height="35dp"
                    android:maxLength="12"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:hint="Total relief..."
                    android:background="@android:drawable/editbox_background"
                    android:textColor="@android:color/black"
                    android:id="@+id/totalreliefedittextid"
                    android:textAlignment="center"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:fadingEdgeLength="10dp"
                    android:ems="10"> </EditText>

            </LinearLayout>

    </LinearLayout>

            <Button
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/buttoncalculate"
           android:gravity="center"
            android:text="Calculate"
            android:background="#2E86C1"
            android:visibility="visible"
            android:longClickable="true"
            android:fadingEdge="vertical"
            android:onClick="CalCulateIncomeTax"
            android:layout_marginTop="35dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                android:layout_marginBottom="151dp"
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_height="500dp"
                    android:layout_width="match_parent"
                    android:id="@+id/chart1"/>

            </LinearLayout>
        </LinearLayout>

        </ScrollView>

</FrameLayout>


<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/shitstuff"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:layout_marginTop="-24dp"
android:fontFamily="monospace"
android:maxLines="1"
android:background="#ffffff"
android:textAppearance="?attr/textAppearanceListItem"
android:textSize="22sp"
app:itemTextColor="#000000"
app:headerLayout="@layout/nav_header_main"
app:menu="@menu/drawermenu"
    />
    </android.support.v4.widget.DrawerLayout>

    </LinearLayout>